{
  "compilerOptions": {
    "composite": true,
    "declaration": true,     // 必须允许生成声明文件
    "emitDeclarationOnly": false,

    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    /* 新增ES特性库 */
    "lib": ["ES2015", "DOM"],

    "outDir": "./dist",
    "types": ["element-plus/global","echarts"],
    // 显式保留主配置的 paths/baseUrl（可选）
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",        // 包含 src 目录下所有 TS 文件
    "src/**/*.tsx",       // 包含 src 目录下所有 TSX 文件
    "src/**/*.vue",       // 包含 src 目录下所有 Vue 文件
    "./auto-imports.d.ts", // 包含自动导入的类型声明
    "./components.d.ts"   // 包含自动注册组件的类型声明
  ]
}